{
  "name": "@turtlecoin/crypto",
  "version": "7.0.0",
  "description": "Node C++ Addon for Cryptographic Functions",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll && git restore docs/CNAME",
    "clean-addon": "./node_modules/.bin/cmake-js clean",
    "build-addon": "npm run clean-addon && env BUILD_NODEJS=1 ./node_modules/.bin/cmake-js compile",
    "build-ts": "./node_modules/.bin/tsc",
    "build-js": "./scripts/build_js.sh",
    "conditional-build-js": "test -f .gitsource && yarn build-js || echo \"SKIP: NOT GIT SOURCE\"",
    "prebuild": "env BUILD_NODEJS=1 ./node_modules/.bin/prebuild --backend cmake-js",
    "prebuild-all": "env BUILD_NODEJS=1 ./node_modules/.bin/prebuild --backend cmake-js --all",
    "prebuild-install": "./node_modules/.bin/prebuild-install --download --verbose || npm run build-addon",
    "test-node": "./node_modules/.bin/mocha --timeout 60000 --require ts-node/register test/test.ts",
    "test-js": "env FORCE_JS=1 yarn test-node",
    "test-wasm": "env FORCE_WASM=1 yarn test-node",
    "fix-style": "yarn fix-style-cxx && yarn fix-style-ts",
    "fix-style-ts": "./node_modules/.bin/eslint --fix typescript/**/*.ts test/**/*.ts",
    "fix-style-cxx": "node ./scripts/format.js",
    "style": "yarn run style-ts",
    "style-ts": "./node_modules/.bin/eslint typescript/**/*.ts test/**/*.ts",
    "install": "npm run prebuild-install && npm run conditional-build-js",
    "test": "yarn style && yarn test-node && yarn test-js && yarn test-wasm",
    "prepublishOnly": "yarn build-addon && yarn build-js && yarn build-ts && yarn test"
  },
  "files": [
    "dist/*",
    "src/*",
    "include/*",
    "external/ed25519",
    "external/rapidjson",
    "external/sha3",
    "build.js/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/turtlecoin-crypto.git"
  },
  "author": "Brandon Lehmann <brandonlehmann@gmail.com>",
  "license": "BSD-3",
  "bugs": {
    "url": "https://github.com/turtlecoin/turtlecoin-crypto/issues"
  },
  "homepage": "https://github.com/turtlecoin/turtlecoin-crypto#readme",
  "engineStrict": true,
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@turtlecoin/bytestream": "^0.0.14",
    "big-integer": "^1.6.48",
    "bindings": "^1.5.0",
    "cmake-js": "^6.1.0",
    "nan": "^2.14.2",
    "prebuild-install": "^6.0.0"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "clang-format": "^1.5.0",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "js-sha3": "^0.8.0",
    "mocha": "^8.2.1",
    "prebuild": "^10.0.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.19",
    "typescript": "^4.1.3"
  }
}
